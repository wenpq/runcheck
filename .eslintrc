{
  "env": {
    "browser": true,
    "jquery": true,
    "mocha": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "filenames"
  ],
  "root": true,
  "rules": {
    "camelcase": 0,
    "consistent-this": 0,
    "filenames/match-exported": 2,
    "filenames/match-regex": [
      2,
      "^[a-z-]+$",
      true
    ],
    "func-style": 0,
    "indent": [
      "error",
      2
    ],
    "max-len": 0,
    "max-params": [
      2,
      10
    ],
    "max-statements": 0,
    "no-console": [
      "warn"
    ],
    "no-magic-numbers": [
      "warn",
      {
        "ignore": [
          -1,
          0,
          1
        ],
        "ignoreArrayIndexes": true
      }
    ],
    "operator-assignment": 0,
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    "space-before-function-paren": [
      "warn",
      {
        "anonymous": "always",
        "named": "never"
      }
    ]
  }
}
